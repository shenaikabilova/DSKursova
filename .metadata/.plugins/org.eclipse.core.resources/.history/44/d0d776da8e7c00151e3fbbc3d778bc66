import java.util.List;

import javax.swing.table.AbstractTableModel;

/**
 * 
 */

/**
 * @author shenaikabilova
 *
 */
public class TableModel extends AbstractTableModel {
	private Object[][] tableVehicles;
	private Object[][] tableDrivers;
	String[] columnNameVehicles = {"TYPE_VEHICLE", "REGISTRATION_NUMBER", "YEAR_VEHICLE", "COLOR", "NUMBER_PLACES", "KM", 
			   					   "REPAIR_COUNT", "LAST_REPAIR", "LICENSE"};
	String[] columnNameDrivers = {"DRIVER_FIRST_NAME", "DRIVER_LAST_NAME", "DRIVER_LICENSE", "DRIVER_ID"};
	
	public TableModel (VehicleDAO dao) {
		List<Vehicles> vehicles = dao.listVehicles();
			
		table = new Object[vehicles.size()][columnNameVehicles.length];
		
		int i=0;
		for (Vehicles vehicle : vehicles) {
			table[i][0] = vehicle.getTypeVehicle();
			table[i][1] = vehicle.getRegistrationNumber();
			table[i][2] = vehicle.getYearVehicle();
			table[i][3] = vehicle.getColor();
			table[i][4] = vehicle.getNumerOfPlaces();
			table[i][5] = vehicle.getKm();
			table[i][6] = vehicle.getRepairCount();
			table[i][7] = vehicle.getLastRerair();
			table[i][8] = vehicle.getDriverLicense();
			
			i++;
		}
	}
	
	public TableModel (DriverDAO dao) {
		List<Drivers> drivers = dao.listDrivers();
		
		table = new Object[drivers.size()][columnNameDrivers.length];
		
		int i=0;
		for (Drivers driver : drivers) {
			table[i][0] = driver.getDriverFirstName();
			table[i][1] = driver.getDriverLastName();
			table[i][2] = driver.getDriverLicense();
			table[i][3] = driver.getDriverID();
			
			i++;
		}
	}
	
	public int getColumnCountVehicles() {
		return columnNameVehicles.length;
	}
	
	public int getColumnCountDrivers() {
		return columnNameDrivers.length;
	}

	public int getRowCount() {
		return table.length;
	}

	public Object getValueAt(int arg0, int arg1) {
		return table[arg0][arg1];
	}
	
	public String getColumnNameVehicles (int columnInex) {
		return columnNameVehicles[columnInex];
	}
	
	public String getColumnNameDrivers (int columnIndex) {
		return columnNameDrivers[columnIndex];
	}

	/* (non-Javadoc)
	 * @see javax.swing.table.TableModel#getColumnCount()
	 */
	@Override
	public int getColumnCount() {
		// TODO Auto-generated method stub
		return 0;
	}
}